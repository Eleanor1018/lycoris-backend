# ===== Required =====
ADMIN_SECOND_PASSWORD_HASH=
ADMIN_DEFAULT_USER_PASSWORD=Lycoris123!

# Postgres (recommend AWS RDS)
DB_URL=jdbc:postgresql://YOUR_RDS_HOST:5432/lycoris
DB_USERNAME=postgres
DB_PASSWORD=CHANGE_ME

# Backend service
SERVER_PORT=8080
APP_UPLOAD_DIR=/app/uploads
APP_CORS_ALLOWED_ORIGINS=https://lycoris.online,https://www.lycoris.online

# Session cookie (cross-subdomain frontend/backend)
SESSION_COOKIE_NAME=LYCORIS_SESSION
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=none
# Recommended when frontend/backend are subdomains of same apex domain.
SESSION_COOKIE_DOMAIN=.lycoris.online

# Redis-backed session + cache
SPRING_SESSION_STORE_TYPE=redis
REGISTER_RATE_LIMIT_REDIS_ENABLED=true
MARKER_CACHE_REDIS_ENABLED=true
MARKER_CACHE_NEARBY_TTL_SECONDS=12
MARKER_CACHE_VIEWPORT_TTL_SECONDS=10

# If you run external Redis instead of compose redis service, set these.
# REDIS_HOST=127.0.0.1
# REDIS_PORT=6379
# REDIS_PASSWORD=
