SERVER_SSL_ENABLED=false
# Optional local HTTPS cert (PEM) for Spring Boot
# SERVER_SSL_CERT=/absolute/path/to/localhost.pem
# SERVER_SSL_KEY=/absolute/path/to/localhost-key.pem

# CORS (comma-separated)
APP_CORS_ALLOWED_ORIGINS=http://localhost:5173,https://localhost:5173,https://lycoris.online,https://www.lycoris.online

# Session cookie for cross-site requests (frontend and API on different subdomains)
SESSION_COOKIE_NAME=LYCORIS_SESSION
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=none
SESSION_COOKIE_DOMAIN=

# Postgres
DB_URL=jdbc:postgresql://localhost:5432/lycoris
DB_USERNAME=postgres
DB_PASSWORD=asdf1018

# ===== Redis (optional) =====
# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Session store:
# - none  : use default servlet session (no Redis required)
# - redis : store session in Redis (recommended for multi-instance)
SPRING_SESSION_STORE_TYPE=none

# Register anti-abuse limiter: Redis first, fallback to in-memory if unavailable
REGISTER_RATE_LIMIT_REDIS_ENABLED=true

# Marker hotspot cache (nearby/viewport): Redis cache with short TTL
MARKER_CACHE_REDIS_ENABLED=true
MARKER_CACHE_NEARBY_TTL_SECONDS=12
MARKER_CACHE_VIEWPORT_TTL_SECONDS=10
